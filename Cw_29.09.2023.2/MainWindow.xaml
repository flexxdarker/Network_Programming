<Window x:Class="Cw_29._09._2023._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cw_29._09._2023._2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <DockPanel Background="AntiqueWhite">
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <Button x:Name="Join" Content="Join" Click="Join_Click" DockPanel.Dock="Left" Margin="2" Background="LightGreen"/>
            <Button x:Name="Leave" Content="Leave" Click="Leave_Click" DockPanel.Dock="Left" Margin="2" Background="LightPink" />
            <TextBox x:Name="UsernameTb" DockPanel.Dock="Left" Width="325" Margin="2" Background="LightGray"/>
        </DockPanel>
        <ListBox x:Name="listBx" DockPanel.Dock="Top" Height="375" Background="AntiqueWhite"/>
        <DockPanel DockPanel.Dock="Top">
            <Button x:Name="sendBtn" Content="Send" DockPanel.Dock="Right" Margin="2" Background="LightBlue"/>
            <TextBox x:Name="message" Margin="2" Background="LightGray"/>
        </DockPanel>
    </DockPanel>
</Window>
